<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat</title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/extra-style.css">
    <script src="/socket.io/socket.io.js"></script>
    <script src="../scripts/chat.js" defer></script>
</head>



<body class="flex flex-col h-screen bg-neutral-900">

    <!-- Header -->
    <%- include('includes/header') %>
        <!-- header end -->

        <main class="chat-box bg-gray-100 p-4 flex-grow flex mt-24 fixed right-20 left-20 bottom-0 top-0">

            <aside class="chat-member hidden md:block">
                <div class="searchbar-container">
                    <h2 class="chat-room text-lg font-semibold mb-3 text-gray-700">Neighbor's Chat</h2>
                    <div class="input-wrapper border-2 border-t-0 border-l-0 border-r-0">
                        <input type="text" placeholder="Search group member"
                            class="p-2 outline-none placeholder:text-lg w-full">
                    </div>

                </div>

                <div class="group-members h-96  overflow-auto">

                    <div class="member-wrapper flex items-center hover:bg-gray-600 cursor-pointer mt-5">
                        <img class="profile w-10 h-10 rounded-full object-cover mr-3" src="../profile.jpg"
                            alt="profile-image">
                        <span class="member font-semibold">Abraham Dukuly</span>
                    </div>
                </div>

            </aside>

          

            <section class="chat-message flex-1 p-2.5 overflow-auto h-96 overflow-x-hidden">
                <section class="chat-message-holder ml-10">
                    <div class="message-top flex flex-col">
                        <div class="flex items-end">
                            <img class="w-10 h-10 rounded-full object-cover mr-3" src="../profile.jpg"
                                alt="profile-image">
                            <span
                                class="message text-sm md:text-lg bg-gray-200 text-black px-3 py-2 rounded-lg max-w-72">Lorem
                                ipsum dolor sit, non?</span>
                        </div>
                        <!-- <div class="timestamp text-gray-400">1 hour ago</div> -->
                    </div>

                </section>


                <!-- <div
                    class="wrapper message-button-wrapper flex rounded-2xl font-semibold font-sans border border-gray-500">

                </div> -->


                <form action="" id="form">
                    <div class="input-wrapper border-none
                    h-14 flex items-center justify-between p-4 flex-shrink max-w-screen-md fixed bottom-5 right-10 left-96">
                        <textarea id="input-field" class="p-2  rounded-3xl outline-none border-none text-lg flex-1 bg-gray-200"
                            type="text" placeholder="type a message..." autocomplete="off"></textarea>
                        <button id="send-btn" class="text-lg p-2 bg-blue-700
                        border-none text-white rounded-lg cursor-pointer">Send</button>
    
                    </div>

                </form>

            </section>

        </main>

</body>


</html>